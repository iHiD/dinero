<Window x:Class="Dinero.LandingPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dinero" Height="245" Width="500" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel>
            <Button Height="40" Width="400" Margin="0 25" Content="Add New Transactions" Click="Button_Click" />
            <Button Height="40" Width="400" Content="View Accounts" Click="Button_Click" />
            <Label Margin="0 25 40 0" HorizontalAlignment="Right" Foreground="CornflowerBlue" Cursor="Hand">
                <Underline>
                    Settings
                </Underline>
            </Label>
        </StackPanel>
    </Grid>
</Window>
